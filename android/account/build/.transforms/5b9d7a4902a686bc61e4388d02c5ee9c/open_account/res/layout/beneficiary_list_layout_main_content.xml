<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/beneficiary_main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/custom_toggle_button_white_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_beneficiary_percentage"
        android:textColor="@color/bpDarker_blue"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_beneficiary_name"
        android:textColor="@color/bpblack"
        android:layout_toEndOf="@id/txt_beneficiary_percentage"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_beneficiary_address"
        android:textColor="@color/light_gray"
        android:layout_toEndOf="@id/txt_beneficiary_percentage"
        android:layout_below="@id/txt_beneficiary_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>